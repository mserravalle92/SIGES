{% extends 'TeachingClassBundle:Bases:base.html.twig' %}
{% block pageTitle %}{{pregunta.pregunta}}{% endblock %}
{% block content %}
    <div class="col-md-10 col-md-offset-1">


    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de Opciones</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >

    <table class="table table-striped table-condensed" id="tablaIncompleta">
        <thead>
            <tr>
                <th>Id</th>
                <th>Opcion</th>
                <th>Correcta</th>
                <th>Fechaalta</th>
                <th>Fechabaja</th>
                <th>Fechamodificacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opcionPreguntum in opcionPreguntas %}
            <tr>
                <td><a href="{{ path('opciones_show', { 'id': opcionPreguntum.id }) }}">{{ opcionPreguntum.id }}</a></td>
                <td>{{ opcionPreguntum.opcion }}</td>
                <td>{% if opcionPreguntum.correcta %}Sí{% else %}No{% endif %}</td>
                <td>{% if opcionPreguntum.fechaAlta %}{{ opcionPreguntum.fechaAlta|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if opcionPreguntum.fechaBaja %}{{ opcionPreguntum.fechaBaja|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if opcionPreguntum.fechaModificacion %}{{ opcionPreguntum.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                            <a href="{{ path('opciones_show', { 'id': opcionPreguntum.id }) }}">show</a>
                            <a href="{{ path('opciones_edit', { 'id': opcionPreguntum.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <a href="{{ path('opciones_new' , {'id':pregunta.id}) }}" class="btn btn-primary pull-right" >Cargar nueva opción</a>
      <a href="{{ path('pregunta_index', {'id':pregunta.claseDidactica.id}) }}" style="margin-right:10px" class="btn btn-default pull-right">Volver</a>
  </div>
</div>

{% endblock %}
