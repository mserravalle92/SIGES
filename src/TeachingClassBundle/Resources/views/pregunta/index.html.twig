{% extends 'TeachingClassBundle:Bases:base.html.twig' %}

{% block pageTitle %}Clase: {{clase.descripcion}}{% endblock %}

{% block content %}
<div class="col-md-10 col-md-offset-1">

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Listado de preguntas</h3>
    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
        <i class="fa fa-minus"></i></button>
      <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
        <i class="fa fa-times"></i></button>
    </div>
  </div>
  <div class="box-body" >

    <table class="table table-condensed table-striped" id="tablaIncompleta">
        <thead>
            <tr>
                <th>N°</th>
                <th>Pregunta</th>
                <th>Fecha de Alta</th>
                <th>Fecha de Baja</th>
                <th>Fecha última modificación</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for preguntum in preguntas %}
            <tr>
                <td><a href="{{ path('pregunta_show', { 'id': preguntum.id }) }}">{{ preguntum.id }}</a></td>
                <td>{{ preguntum.pregunta }}</td>
                <td>{% if preguntum.fechaAlta %}{{ preguntum.fechaAlta|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if preguntum.fechaBaja %}{{ preguntum.fechaBaja|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if preguntum.fechaModificacion %}{{ preguntum.fechaModificacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>
                  <a href="{{ path('opciones_index', { 'id': preguntum.id }) }}" class="btn btn-primary"><i class="fa fa-search"></i></a>
                </td>
                <td>
                  <a href="{{ path('pregunta_edit', { 'id': preguntum.id }) }}" class="btn btn-default"><i class="fa fa-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


  </div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <a href="{{ path('pregunta_new',{'id':clase.id } ) }}" class="btn btn-primary pull-right">Cargar nueva pregunta</a>
  </div>
</div>

</div>
{% endblock %}
