{% extends 'TeachingClassBundle:Bases:base.html.twig' %}

{% block content %}
<div class="col-md-6 col-md-offset-3">


<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Cargar nueva pregunta</h3>
    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
        <i class="fa fa-minus"></i></button>
      <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
        <i class="fa fa-times"></i></button>
    </div>
  </div>
  <div class="box-body" >

    {{ form_start(form) }}
        <div class="form-group col-md-12">
        {{form_label(form.pregunta)}}
          {{ form_widget(form.pregunta, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
          <span class="help-block">{{ form_errors(form.pregunta) }}</span>
        </div>
        <div class="form-group col-md-12">
          {{form_label(form.tipoPregunta)}}
            {{ form_widget(form.tipoPregunta, {'attr': {'class': 'form-control', 'placeholder': 'Seleccione una opci√≥n', 'required':''}}) }}
            <span class="help-block">{{ form_errors(form.tipoPregunta) }}</span>
          </div>
    <input type="submit" value="Finalizar y cargar opciones" class="btn btn-primary pull-right"/>
    {{ form_end(form) }}

  </div>
</div>
{% endblock %}
