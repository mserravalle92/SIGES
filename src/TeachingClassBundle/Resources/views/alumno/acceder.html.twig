<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <b>SIGES</b><br><h4><span class="text-primary">Si</span>stema de <span class="text-primary">G</span>estión de <span class="text-primary">ES</span>cuelas</h4>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <div class="callout callout-success">
      <p>  Ingrese los datos de la sesión anónima </p>
    </div>
      <form action="{{path('inicio_sesion_anonima')}}" method="post">
        <div class="form-group has-feedback">
          <input type="text" id="username" class="form-control" name="codigo" value=""
           class="form-control" placeholder="Ingrese el código de acceso">
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <input type="password" id="username" class="form-control" name="password" value=""
           class="form-control" placeholder="Ingrese la contraseña">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Generar" class="btn btn-primary">
        </div>
      </form>

      {% for flash_message in app.session.flashBag.get('error') %}
        <p class="text text-danger">
            {{ flash_message }}
        </p>
      {% endfor %}
    </div>

  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

