{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alumno</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alumno.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ alumno.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ alumno.apellido }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ alumno.dni }}</td>
            </tr>
            <tr>
                <th>Legajo</th>
                <td>{{ alumno.legajo }}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>{% if alumno.fechaNacimiento %}{{ alumno.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Localidad</th>
                <td>{{ alumno.localidad }}</td>
            </tr>
            <tr>
                <th>Nacionalidad</th>
                <td>{{ alumno.nacionalidad }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ alumno.direccion }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ alumno.mail }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ alumno.telefono }}</td>
            </tr>
            <tr>
                <th>Obrasocial</th>
                <td>{{ alumno.obraSocial }}</td>
            </tr>
            <tr>
                <th>Fichamedica</th>
                <td>{{ alumno.fichaMedica }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ alumno.sexo }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ alumno.usuario }}</td>
            </tr>
            <tr>
                <th>Fechaalta</th>
                <td>{% if alumno.fechaAlta %}{{ alumno.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechamodificacion</th>
                <td>{% if alumno.fechaModificacion %}{{ alumno.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechabaja</th>
                <td>{% if alumno.fechaBaja %}{{ alumno.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alumnos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('alumnos_edit', { 'id': alumno.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
