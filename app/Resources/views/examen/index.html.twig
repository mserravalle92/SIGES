{% extends 'base.html.twig' %}

{% block content %}
    <h1>Examens list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenido</th>
                <th>Horariodiamateria</th>
                <th>Tipo</th>
                <th>Promediable</th>
                <th>Fechaalta</th>
                <th>Fechamodificacion</th>
                <th>Fechabaja</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for examen in examens %}
            <tr>
                <td><a href="{{ path('examen_show', { 'id': examen.id }) }}">{{ examen.id }}</a></td>
                <td>{{ examen.contenido }}</td>
                <td>{{ examen.horarioDiaMateria }}</td>
                <td>{{ examen.tipo }}</td>
                <td>{% if examen.promediable %}Yes{% else %}No{% endif %}</td>
                <td>{% if examen.fechaAlta %}{{ examen.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if examen.fechaModificacion %}{{ examen.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if examen.fechaBaja %}{{ examen.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('examen_show', { 'id': examen.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('examen_edit', { 'id': examen.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('examen_new') }}">Create a new examen</a>
        </li>
    </ul>
{% endblock %}
