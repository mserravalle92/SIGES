{% extends 'base.html.twig' %}
{% block pageTitle %}Edición de Año
{% endblock %}


{% block content %}

    <ul>
        <li>
            <a href="{{ path('anio_index') }}">Volver a Lista de Años</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <div class="col-md-8 col-md-offset-2">
      <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Editar Año</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

    {{ form_start(edit_form) }}

        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Numero: </label>
          {{ form_widget(edit_form.numero, {'attr': {'class': 'form-control', 'placeholder': ' ', 'type' : 'int', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Nivel: </label>
          {{ form_widget(edit_form.nivel, {'attr': {'class': 'form-control', 'placeholder': '', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2 ">
        <label class="control-label">Descripción:</label>
          {{ form_widget(edit_form.descripcion, {'attr': {'class': 'form-control', 'placeholder': '', 'type' : 'text', }}) }}
        </div>
        
        <div class="col-md-4">

        <input class="btn-primary" type="submit" value="Editar" />
        </div>
    {{ form_end(edit_form) }}

    </div>
    </div>
    </div>


  
{% endblock %}
