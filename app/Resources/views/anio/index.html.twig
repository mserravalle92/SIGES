{% block content %}


    <div class="col-md-6 col-md-offset-3" >
<div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Crear Nuevo Año Escolar</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body " >
      <div class=" col-md-8 col-md-offset-2">

      {{ form_start(form, {'action': path('anio_new'), 'method': 'POST'}) }}
        {{ form_widget(form) }}

        <div class="form-group ">
              {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Año Escolar', 'type' : 'int', }}) }}
            </div>
            
             <div class="form-group ">
              {{ form_widget(form.nivel, {'attr': {'class': 'form-control', 'placeholder': 'Primario/Secundario', 'type' : 'text'}}) }}
            </div>
            <div class="form-group ">
              {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'descripcion', 'type' : 'text'}}) }}
        </div>
        </div>
        

        <input class="btn-primary  col-md-6 col-md-offset-3" type="submit" value="Crear" />
    {{ form_end(form) }}


    </div>
    </div>
    </div>


    <div class="col-md-6 col-md-offset-3" >
<div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de Años Cargados</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body " >

    <table>
        <thead>
            <tr>
                <th>Año</th>
                <th>Nivel</th>
                <th>Descripcion</th>
                <th>Ultima Modificacion</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for anio in anios %}
            <tr>
                <td>{{ anio.numero }}</td>
                <td>{% if anio.nivel %}{{ anio.nivel }}{% endif %}</td>
                <td>{% if anio.descripcion %}{{ anio.descripcion }}{% endif %}</td>
                <td>{% if anio.fechaModificacion %}{{ anio.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                     
                             <li>
                             borrar
                            
                             </li>
                      
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



   
{% endblock %}

