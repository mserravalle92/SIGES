{% extends 'base.html.twig' %}

{% block content %}
<div class="col-md-6 col-md-offset-3">

  <div class="box box-succes">
    <div class="box-header with-border">
      <h3 class="box-title">Crear nuevo Ciclo Lectivo</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

    {{ form_start(form, {'action': path('anio_new'), 'method': 'POST'}) }}
        {{ form_widget(form) }}

        <div class="form-group ">
            <label class="control-label">N° : </label>
              {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Año del Ciclo Lectivo', 'type' : 'int', }}) }}
            </div>
            
             <div class="form-group ">
             <label class="control-label">Nivel:  </label>
              {{ form_widget(form.nivel, {'attr': {'class': 'form-control', 'placeholder': 'Primario/Secundario', 'type' : 'text'}}) }}
            </div>
            <div class="form-group ">
            <label class="control-label">Descripcion: </label>
              {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'descripcion', 'type' : 'text'}}) }}
        </div>
        

        <input class="btn-primary" type="submit" value="Crear" />
    {{ form_end(form) }}
    </div>
    </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('anio_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
