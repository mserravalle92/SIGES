{% extends 'base.html.twig' %}
{% block pageTitle %}Creación de Año
{% endblock %}


{% block content %}
<ul>
        <li>
            <a href="{{ path('anio_index') }}">Volver a la lista de años</a>
        </li>
    </ul>
<div class="col-md-8 col-md-offset-2">
      <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Crear nuevo Año</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

    {{ form_start(form, {'action': path('anio_new'), 'method': 'POST'}) }}

        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Numero: </label>
          {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Numero de año', 'type' : 'int', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Nivel: </label>
          {{ form_widget(form.nivel, {'attr': {'class': 'form-control', 'placeholder': 'Primario/Secundario', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2 ">
        <label class="control-label">Descripción:</label>
          {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'Descripción', 'type' : 'text', }}) }}
        </div>
     
        <div class="col-md-4">

        <input class="btn-primary" type="submit" value="Crear" />
    {{ form_end(form) }}
</div>
</div>
</div>

{% endblock %}
