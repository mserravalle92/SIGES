            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
              {{ form_widget(form.dni, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese DNI'}}) }}
              <span class="help-block">{{ form_errors(form.apellido) }}</span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
