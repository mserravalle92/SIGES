{% extends 'base.html.twig' %}

{% block content %}
 
<div class="box">
<div class="box-header with-border"><h3 class="box-title">Datos del tutor</h3></div>
<div class="box-body">
<td>
    <a href="{{ path('tutor_index') }}">
        <button type="button" class="btn btn-default">Volver</button>
    </a>
    
    <a href="{{ path('tutor_edit', { 'id': tutor.id }) }}">
        <button type="button" class="btn btn-default">Editar</button>
    </a>
</td>

 <table class="table table-bordered">
        
        <tbody>
            <tr>
              <th style="width: 170px"></th>
              <th></th>
            </tr>
            <tr>
              <th>Id</th>
              <td>{{ tutor.id }}</td>
            </tr>
            <tr>
              <th>Nombre</th>
              <td>{{ tutor.nombre }}</td>
            </tr>
            <tr>
              <th>Apellido</th>
              <td>{{ tutor.apellido }}</td>
            </tr>
            <tr>
              <th>Dni</th>
              <td>{{ tutor.dni }}</td>
            </tr>
            <tr>
              <th>Direccion</th>
              <td>{{ tutor.direccion }}</td>
            </tr>
            <tr>
                <th>Localidad</th>
                <td>{{ tutor.localidad }}</td>
            </tr>
            <tr>
                <th>Nacionalidad</th>
                <td>{{ tutor.nacionalidad }}</td>
            </tr>
            <tr>
                <th>Fecha de nacimiento</th>
                <td>{% if tutor.fechaNacimiento %}{{ tutor.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ tutor.telefono }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ tutor.mail }}</td>
            </tr>
            <tr>
                <th>Ocupacion</th>
                <td>{{ tutor.ocupacion }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ tutor.sexo }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ tutor.usuario }}</td>
            </tr>
            <tr>
                <th>Fecha alta</th>
                <td>{% if tutor.fechaAlta %}{{ tutor.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha modificacion</th>
                <td>{% if tutor.fechaModificacion %}{{ tutor.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha baja</th>
                <td>{% if tutor.fechaBaja %}{{ tutor.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>

    </table>
</table>

<td>
    
    <a href="{{ path('tutor_index') }}">
        <button type="button" class="btn btn-default">Volver</button>
    </a>
    
    <a href="{{ path('tutor_edit', { 'id': tutor.id }) }}">
        <button type="button" class="btn btn-default">Editar</button>
    </a>

    {{ form_start(delete_form) }}
    <input type="submit" value="Eliminar">
    {{ form_end(delete_form) }}

</td>


{% endblock %}
