{% extends 'base.html.twig' %}

{% block pageTitle %}Creaci√≥n de Materia
{% endblock %}

{% block content %}
<ul>
        <li>
            <a href="{{ path('materia_index') }}">Volver</a>
        </li>
    </ul>
<div class="col-md-8 col-md-offset-2">
      <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Crear nueva materia</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

    {{ form_start(form, {'action': path('materia_new'), 'method': 'POST'}) }}

        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Nombre: </label>
          {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de la materia', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Curso: </label>
          {{ form_widget(form.curso, {'attr': {'class': 'form-control', 'placeholder': 'Seleccione Curso', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2 ">
        <label class="control-label">Docente:</label>
          {{ form_widget(form.docentes, {'attr': {'class': 'form-control', 'placeholder': 'Seleccione Docente', 'type' : 'text', }}) }}

        </div>
        <div class="col-md-4">

        <input class="btn-primary" type="submit" value="Crear" />
    {{ form_end(form) }}
</div>
</div>
</div>


{% endblock %}
