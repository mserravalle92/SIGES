{% extends 'base.html.twig' %}
{% block pageTitle %}Bienvenido a la Administracion de Materias
{% endblock %}

{% block content %}

    <div class="col-md-10 col-md-offset-1" >
<div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de Materias</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >
        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-7">
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
            <table id="tablamateria" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="tablamateria_info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for materia in materias %}
            <tr>
                <td><a href="{{ path('materia_show', { 'id': materia.id }) }}">{{ materia.id }}</a></td>
                <td>{{ materia.nombre }}</td>
                <td>
                            <a href="{{ path('materia_show', { 'id': materia.id }) }}">
                                Ver
                            </a>
                            <br>
                            <a href="{{ path('materia_edit', { 'id': materia.id }) }}">
                                Editar
                            </a>
                            <br>
                            <a href="{{ path('biblioteca_new', { 'id': materia.id }) }}">
                                Biblioteca Virtual
                            </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-md-10">
        <br>
            <a class="btn btn-primary" href="{{ path('materia_new') }}">Crear Materia</a>
            <a class="btn btn-primary" href="{{ path('curso_index') }}">Volver a Cursos</a>
    </div>
    
{% endblock %}

{% block js %}

    <script type="text/javascript">
        
        $(document).ready(function() {
            $('#tablamateria').DataTable();
        });
    </script>
    
{% endblock %}
