{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ materium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ materium.nombre }}</td>
            </tr>
            <tr>
                <th>Fechaalta</th>
                <td>{% if materium.fechaAlta %}{{ materium.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechabaja</th>
                <td>{% if materium.fechaBaja %}{{ materium.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechamodificacion</th>
                <td>{% if materium.fechaModificacion %}{{ materium.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('materia_edit', { 'id': materium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
