{% extends 'base.html.twig' %}

{% block pageTitle %} Materia Seleccionada
{% endblock %}

{% block content %}
    <ul>
        <li>
            <a href="{{ path('materia_index') }}">Volver a Lista de Materias</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <div class="col-md-10 col-md-offset-1" >
<div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Materia</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >
 <table class="table table-bordered">
    <tbody>
        <tr>
              <th style="width: 170px"></th>
              <th></th>
            </tr>


        <tr>
                <th>Id</th>
                <td>{{ materia.id }}</td>
        </tr>
        <tr>
                <th>Nombre</th>
                <td>{{ materia.nombre }}</td>
        </tr>
        <tr>
                <th>Fechaalta</th>
                <td>{% if materia.fechaAlta %}{{ materia.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
                <th>Fechabaja</th>
                <td>{% if materia.fechaBaja %}{{ materia.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
                <th>Fechamodificacion</th>
                <td>{% if materia.fechaModificacion %}{{ materia.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
    </tbody>
    </table>

    <td>

    <div class="col-md-4">

         <a href="{{ path('materia_edit', { 'id': materia.id }) }}">
        <button type="button" class="btn-primary">Editar</button>
    </a>


    </td>
{% endblock %}
