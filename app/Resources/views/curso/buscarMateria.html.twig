        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >
    <div class="rows col-md-5 col-md-offset-3"> 

      <form action="{{path('curso_buscarMateria',{ 'id': curso.id} )}}" method="POST">
        <div class="form-group">
          <input name="materia" type="text" class="form-control" placeholder="Nombre Materia">
        
        </div>
          <button type="submit" class="btn btn-primary">Buscar</button>
      
      </form>
    </div>

    {% if (materia != 'null') %}
        <table>    
        <thead>
            <tr>
                <div class="row">
                    <div class="col-sm-17"><table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">                           
                    </div>
                </div>
                <th><p ALIGN=center>Nombre</p></th>
                <th><p ALIGN=center>Opcion</p></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {#<td>{{ alumno.id }}</td>#}
                <td ALIGN=center>{{ materia.nombre }}</td>
                <td ALIGN=center>{{ materia.id }}</td>
                <td ALIGN=center> <a class= "btn btn-primary" href="{{path('curso_autogenerarMateria',{'id': curso.id , 'idMateria': materia.id })}}">Agregar a {{curso.anio.numero}}Â°{{curso.seccion}}</a></td>
    
     </tr>   
    </tbody>
    </table>
    
    {% endif %}

    </div>
    </div>

    <div >
    <a class= "btn btn-primary" href="{{path('materia_new')}}">Nueva Materia</a>
    </div>

     

