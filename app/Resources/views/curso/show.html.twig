{% extends 'base.html.twig' %}

{% block content %}
 <ul>
        <li>
            <a href="{{ path('curso_index') }}">Volver a Listado de cursos</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <div class="col-md-8 col-md-offset-2">
      <div class="box box-primary">
    <div class="box-header with-border">
      <center><h3 class="box-title">Curso {{ curso.anio.numero }}Â° {{ curso.seccion }}</h3></center>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

   <center> <table>
        <tbody>
            <tr>
                <th>Turno: </th>
                <td>{{ curso.turno }}</td>
            </tr>
            <tr>
                <th>Nivel: </th>
                <td>{{ curso.anio.nivel }}</td>
            </tr>
            <tr>
                <th>Ciclo Lectivo: </th>
                <td>{{ curso.ciclolectivo.anio }}</td>
            </tr>
            <tr>
                <th>Ultima Modificacion: </th>
                <td>{% if curso.fechaModificacion %}{{ curso.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table></center>
    <li>
            <a href="{{ path('curso_agregar', { 'id': curso.id }) }}"> Agregar Alumnos y Materias</a>
        </li>
    </div>
    </div>
    </div>

   
{% endblock %}
