{% endblock %}

{% block content %}
    <div class="col-md-offset-1" >
   <ul>
        <li>
            <a href="{{ path('alumno_index') }}">Ir a Listado de Alumnos</a>
        </li>
         <br><br>
    </ul>
    </div>

    <div class="col-md-10 col-md-offset-1 " >
    <div class="box box-primary">
    <div class="box-header with-border">
      <center><h2 class="box-title"><h2>Buscar Alumno</h2></center>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >
    <div class="rows col-md-5 col-md-offset-3"> 

      <form action="{{path('curso_buscarAlumno',{ 'id': curso.id} )}}" method="POST">
        <div class="form-group">
          <input name="dni" type="text" class="form-control" placeholder="DNI alumno">
        
        </div>
          <button type="submit" class="btn btn-primary">Buscar</button>
      
      </form>
    </div>

    {% if (alumno != 'null') %}
     
        <table>    
        <thead>
            <tr>
                <div class="row">
                    <div class="col-sm-17"><table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">                           
                    </div>
                </div>
                <th><p ALIGN=center>Legajo</p></th>
                <th><p ALIGN=center>Nombre</p></th>
                <th><p ALIGN=center>Apellido</p></th>
                <th><p ALIGN=center>Dni</p></th>
                <th><p ALIGN=center>Fecha Nac</p></th>                  
                <th><p ALIGN=center>curso actual</p></th>
                <th><p ALIGN=center>Opcion</p></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {<td>{{ alumno.id }}</td>}
                <td ALIGN=center>{{ alumno.legajo }}</td>
                <td ALIGN=center>{{ alumno.nombre }}</td>
                <td ALIGN=center>{{ alumno.apellido }}</td>
                <td ALIGN=center>{{ alumno.dni }}</td>
                <td ALIGN=center>{% if alumno.fechaNacimiento %}{{ alumno.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
                {% if alumno.curso %}
                <td ALIGN=center>{% for curso in alumno.curso %}
                curso.anio curso.seccion
                {% endfor %}</td>
                {% endif %}
                <td ALIGN=center> <a class= "btn btn-primary" href="{{ path('curso_agregarAlumno',{'id': curso.id , 'idAlumno':alumno })}}">Agregar a {{curso.anio.numero}}Â°{{curso.seccion}}</a></td>
    
     </tr>   
    </tbody>
    </table>
    
    {% endif %}

    </div>
    </div>

    <div >
    <a class= "btn btn-primary" href="{{path('alumno_new')}}">Nuevo Alumno</a>
    </div>

     

{% endblock %}
