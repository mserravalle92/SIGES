{% extends 'base.html.twig' %}

{% block pageTitle %}Bienvenido a la Administracion de Cursos
{% endblock %}


{% block content %}


    <div class="col-md-10 col-md-offset-1" >
<div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de Cursos</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >
    <!-- Boton ciclos lectivos primarios -->

        <center><a id="botonCursosPrimarios" href="#"><h3>
            Cursos Primarios</h3>
        </a></center>
    <!-- Tabla ciclos lectivos primarios -->
    <table class="table table-bordered table-striped table-condensed" id="listaCursosPrimarios" width="100%" style="margin-bottom: 2em;" >
        <thead>
            <tr>
                <th>Turno</th>
                <th>Año</th>
                <th>Sección</th>
                <th>Última Modificación</th>
                <th>Opciones</th>

            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            {% if curso.anio matches '/Primario/' %}
                <tr>
                    <td>{{ curso.turno }}</td>
                    <td>{{curso.anio}}</td>
                    <td>{{ curso.seccion }}</td>
                    <td>{% if curso.fechaModificacion %}{{ curso.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('curso_agregar', { 'id': curso.id }) }}">
                            Agregar  Alumnos y Materias
                        </a>
                        
                        <br>
                        <a href="{{ path('curso_edit', { 'id': curso.id }) }}">
                            Editar
                        </a>
                        
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <!-- boton ciclos lectivos secundaris -->

         <center><h3><a id="botonCursosSecundarios" href="#">
            Cursos Secundarios</h3>
        </a></center>
    <!-- tabla ciclos lectivos secundarios -->
    <table class="table table-bordered table-striped table-condensed" id="listaCursosSecundarios" width="100%" >
        <thead>
            <tr>
                <th>Turno</th>
                <th>Año</th>
                <th>Sección</th>
                <th>Última Modificación</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            {% if curso.anio matches '/Secundario/' %}
                <tr>
                    <td>{{ curso.turno }}</td>
                    <td>{{curso.anio}}</td>
                    <td>{{ curso.seccion }}</td>
                    <td>{% if curso.fechaModificacion %}{{ curso.fechaModificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('curso_agregar', { 'id': curso.id }) }}">
                            Agregar Alumnos y Materias
                        </a>

                        <br>
                          <a href="{{ path('curso_edit', { 'id': curso.id }) }}">
                            Editar

                        </a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <br>
    
      </div>

</div>
</div>

<div class="col-md-10">
    </br>
        <a class="btn btn-primary" href="{{ path('curso_new') }}">Crear Curso</a>
    </div>
{% endblock %}

{% block js %}
    <script src="{{asset('bundles/application/dist/js/indexCurso.js')}}"></script>    

{% endblock %}
