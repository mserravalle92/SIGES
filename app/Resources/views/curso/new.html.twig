{% extends 'base.html.twig' %}

{% block content %}
<ul>
        <li>
            <a href="{{ path('curso_index') }}">Volver</a>
        </li>
    </ul>
<div class="col-md-8 col-md-offset-2">
      <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Crear nuevo Curso</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body" >

    {{ form_start(form, {'action': path('curso_new'), 'method': 'POST'}) }}

        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Año: </label>
          {{ form_widget(form.anio, {'attr': {'class': 'form-control', 'placeholder': 'Año del curso', 'type' : 'int', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2">
        <label class="control-label">Turno: </label>
          {{ form_widget(form.turno, {'attr': {'class': 'form-control', 'placeholder': 'Mañana/Tarde/Noche', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2 ">
        <label class="control-label">Seccion:</label>
          {{ form_widget(form.seccion, {'attr': {'class': 'form-control', 'placeholder': 'seccion', 'type' : 'text', }}) }}
        </div>
        <div class="form-group col-md-8 col-md-offset-2 ">
          <label class="control-label">Ciclo Lectivo:</label>
          {{ form_widget(form.ciclolectivo, {'attr': {'class': 'form-control', 'placeholder': 'seccion', 'type' : 'int', }}) }}
        </div>
        <div class="col-md-4">

        <input class="btn-primary" type="submit" value="Create" />
    {{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}
