{% extends 'base.html.twig' %}

{% block pageTitle %}
	Personal docente
{% endblock %}

{% block titulo_chico %}
	{{ personalDocente.nombre }} {{ personalDocente.apellido }}
{% endblock %}

{% block js %}
	<script>
		function confirmDelete(){
			return confirm("¿Estás seguro que deseas borrar este docente?");
		}
		function confirmEdit(){
			return confirm("¿Estás seguro que deseas modificar este docente?");
		}
		$('#editSubmit').on('click',function(){
			$('#edit_form').submit();
		});
	</script>
{% endblock %}

{% block content %}

    <section class="content">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Datos del docente</h3>
					</div><!-- /.box-header -->
					<div class="box-body no-padding">
						{{ form_start(edit_form, {'attr': {'id':'edit_form','onsubmit':'return confirmEdit();'}}) }}
							{{form_errors(edit_form)}}
							<table class="table table-condensed"><tbody>
								<tr>
									<th>Nombre</th>
									<td>{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Apellido</th>
									<td>{{ form_widget(edit_form.apellido, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Dni</th>
									<td>{{ form_widget(edit_form.dni, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Matricula</th>
									<td>{{ form_widget(edit_form.matricula, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Direccion</th>
									<td>{{ form_widget(edit_form.direccion, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Localidad</th>
									<td>{{ form_widget(edit_form.localidad, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Nacionalidad</th>
									<td>{{ form_widget(edit_form.nacionalidad, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
								<tr>
									<th>Fecha de nacimiento</th>
									<!--<td>{% if personalDocente.fechaNacimiento %}{{ personalDocente.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>-->
									<td>{{ form_widget(edit_form.fechaNacimiento, {'attr': {'class': 'form-control'}}) }}</td>
								</tr>
							</tbody></table>
						{{ form_end(edit_form) }}
					</div><!-- /.box-body -->
				</div><!-- /.box -->
			</div><!-- /.col -->
			<div class="col-md-3"></div>
		</div><!-- /.row -->
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<center>
					<a href="{{ path('personaldocente_index') }}{{ personalDocente.id }}"><button class="btn btn-primary">Volver</button></a>
					&nbsp;&nbsp;
					<button class="btn btn-primary" id='editSubmit'/>Guardar</button>
					&nbsp;&nbsp;
					{{ form_start(delete_form, {'attr':{'onsubmit':'return confirmDelete();','style':'display:inline;'} }) }}
						<input class="btn btn-danger btn-borrar" type="submit" value="Borrar">
					{{ form_end(delete_form) }}
				</center>
			</div>
			<div class="col-md-4"></div>
		</div>
	</section>

{% endblock %}
