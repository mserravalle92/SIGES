{% extends 'base.html.twig' %}

{% block content %}
    <h1>Alumno creation</h1>

    {{ form_start(form) }}
         <div class="form-group col-md-12">
          {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese nombre'}}) }}
          <span class="help-block">{{ form_errors(form.nombre) }}</span>
        </div>

        <div class="form-group col-md-12">
          {{ form_widget(form.apellido, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese apellido'}}) }}
          <span class="help-block">{{ form_errors(form.apellido) }}</span>
        </div>

        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('alumno_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
