                <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-default btn-flat">Acci√≥n</button>
                  <button type="button" class="btn btn-default btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="{{ path('alumno_show', { 'id': alumno.id }) }}">Mostrar</a></li>
                    <li><a href="{{ path('alumno_edit', { 'id': alumno.id }) }}">Editar</a></li>
                  </ul>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
