{% extends 'base.html.twig' %}

{% block pageTitle %}
  Agregar tutores
{% endblock %}

{% block css %}
  <!-- <link rel="stylesheet" href="{{asset('bundles/application/dist/css/cicloLectivo.css')}}"> -->
{% endblock %}

{% block content %}

  <ul>
    <li><a href="{{ path('alumno_index') }}">Volver a Listado de Alumnos</a></li>
  </ul>
  <div class="col-md-17">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Tutores de {{ alumno.nombre }} {{ alumno.apellido }}</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >
        <table  class="table table-bordered table-striped table-condensed"  id="listadoDeAlumnos">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Dni</th>
              <th>Direccion</th>
              <th>Localidad</th>
              <th>Nacionalidad</th>
              <th>Telefono</th>
              <th>Mail</th>
            </tr>
          </thead>        
          <tbody>
            {% for tutor in tutores %}
              <tr>
                <td><a href="{{ path('tutor_show', { 'id': tutor.id }) }}">{{ tutor.id }}</a></td>
                <td>{{ tutor.nombre }}</td>
                <td>{{ tutor.apellido }}</td>
                <td>{{ tutor.dni }}</td>
                <td>{{ tutor.direccion }}</td>
                <td>{{ tutor.localidad }}</td>
                <td>{{ tutor.nacionalidad }}</td>
                <td>{{ tutor.telefono }}</td>
                <td>{{ tutor.mail }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <ul>
          <a href="{{ path('tutor_newAlumnoTutor', { 'id': alumno.id  }) }}" class="pull-right btn btn-primary  ">Agregar nuevo tutor</a>  
        </ul>
      </div>
    </div>
  </div>

{% endblock %}

{% block js %}
   
    <script src="{{asset('bundles/application/dist/js/cicloLectivo.js')}}"></script>

{% endblock %}
