{% extends 'base.html.twig' %}

{% block css %}
  <!-- <link rel="stylesheet" href="{{asset('bundles/application/dist/css/cicloLectivo.css')}}"> -->
{% endblock %}

{% block content %}
<h3>Agregar Tutores</h3>
  <ul>
    <a href="{{ path('alumno_index') }}"><button type="button" class="btn btn-primary btn-sm">Volver a Listado de Alumnos</button></a>
  </ul>
  <div class="col-md-7">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Tutores de {{ alumno.nombre }} {{ alumno.apellido }}</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body" >
        <table  class="table table-bordered table-striped table-condensed"  id="listadoDeAlumnos">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Direccion</th>
              <th>Localidad</th>
              <th>Telefono</th>
              <th>Acción</th>
            </tr>
          </thead>        
          <tbody>
            {% for tutor in tutores %}
              <tr>
                <td><a href="{{ path('tutor_show', { 'id': tutor.id }) }}">{{ tutor.id }}</a></td>
                <td>{{ tutor.nombre }}</td>
                <td>{{ tutor.apellido }}</td>
                <td>{{ tutor.direccion }}</td>
                <td>{{ tutor.localidad }}</td>
                <td>{{ tutor.telefono }}</td>
                <td style="padding: 5px;"><a href="{{ path('tutor_deshacer', { 'id': alumno.id , 'id2': tutor.id, 'opc': 'true' }) }}">deshacer</a></td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <ul>
          <a href="{{ path('tutor_newAlumnoTutor', { 'id': alumno.id  }) }}"><button type="button" class="pull-right btn btn-primary btn-sm">Agregar nuevo Tutor</button></a>  
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-5">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Agregar desde el listado de Tutores</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <div class="form-1-2">
        <label for="caja_busqueda">Buscar:</label>
        <input type="text" name="caja_busqueda" id="caja_busqueda"></input>
      </div>
      <table  class="table table-bordered table-striped table-condensed"  id="listadoDeTutores">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Acción</th>
        </tr>
        {% for tutor in tutors %}
          <tr>
            <td><a href="{{ path('tutor_show', { 'id': tutor.id }) }}">{{ tutor.id }}</a></td>
            <td>{{ tutor.nombre }}</td>
            <td>{{ tutor.apellido }}</td>
            <td ><a href="{{ path('alumno_agregarTutor', { 'id': alumno.id , 'idTutor': tutor.id }) }}" >Agregar</a></td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>

{% endblock %}

{% block js %}
   
    <script src="{{asset('  bundles/application/dist/js/cicloLectivo.js')}}"></script>

{% endblock %}
